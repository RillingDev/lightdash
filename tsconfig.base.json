{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"module": "Node16",
		"lib": ["ES2020"],
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "Node16",
		"isolatedModules": true,

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": []
}
